
{% extends 'base.html.twig' %}

{% block title %}The Bar - Country{% endblock %}

{% block body %}
    <div class="wrapper row">
        <div class="sidebar col-sm-6">
            Sidebar
        </div>
        <div class="bar col-sm-6">
            <div class="card">
                <div class="card-body">
                    <p>Name : {{ country.name }}, </p>
                    <p>Address : {{ country.address }}, </p>
                    <p>Email : {{ country.email }}</p>
                    <p>Country's beers :</p>
                    <ul>
                        {% for beer in beers %}
                            <li class="card" style="padding: 24px; margin: 16px 0">
                                <p class="card-title">Name : <a href="{{ path('beer', { id: beer.id }) }}">{{ beer.name }}</a></p>
                                <p class="card-text">Description : {{ beer.description }}</p>
                                <p class="card-text">Price : {{ beer.price }} â‚¬</p>
                                <p class="card-text">Degree : {{ beer.degree }}</p>
                            </li>
                        {% endfor %}
                    </ul>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
