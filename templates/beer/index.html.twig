{% extends 'base.html.twig' %}

{% block title %}The Bar - Homepage{% endblock %}

{% block body %}

    <div class="wrapper row">
        <div class="sidebar col-sm-6">
            Sidebar
        </div>
        <div class="bar col-sm-6">
            <h2>{{ data.title }}</h2>
            {% for beer in data.beers %}
                <div class="card">
                    <div class="card-body">
                        <a href="{{ path('beer', { 'id' : beer.id }) }}">
                            {{ beer.name }}
                        </a>
                        <p class="card-text">{{ beer.description }}</p>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
